<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:shrinkColumns="*"
    tools:context="mx.itesm.ianneumann.proyectometodos.MenuMetodos">
    <ScrollView>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*">
            <TableRow
                android:layout_height="1dp"
                android:layout_width="wrap_content"
                android:weightSum="1"
                android:layout_margin="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:text="Favor de insertar un sistema de ecuaciones para el metodo de Gauss-Siedel. Es necesario que la diagonal sea dominante para que el metodo converga."/>
            </TableRow>

            <TableRow android:weightSum="1"
                android:layout_margin="10dp">
                <TextView android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="#000"
                    android:text="Inserte una precision en escala del 0 - 99.999..."/>
                <EditText
                    android:id="@+id/gauss_siedel_porcentaje"
                    android:layout_width="0px"
                    android:layout_weight="0.5"
                    android:text="90"
                    android:textAlignment="center"
                    android:inputType="number|numberDecimal"/>
            </TableRow>

            <TableRow>
                <HorizontalScrollView>
                    <TableLayout
                        android:id="@+id/gauss_siedel_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TableRow>
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
            </TableRow>

            <TableRow
                android:weightSum="1">
                <Button
                    android:layout_weight="1"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="10dp"
                    android:text="Aceptar"
                    android:textAlignment="center"
                    android:id="@+id/gauss_siedel_aceptar"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>

</TableLayout>
