<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="mx.itesm.ianneumann.proyectometodos.MenuMetodos">

<EditText
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/bisection_function"
    android:hint="function"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />


<EditText
    android:id="@+id/bisection_a"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="numberSigned|numberDecimal"
    android:hint="Interval start"
    android:layout_below="@+id/bisection_function"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:id="@+id/bisection_b"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="numberSigned|numberDecimal"
    android:layout_alignBaseline="@+id/bisection_a"
    android:layout_alignBottom="@+id/bisection_a"
    android:hint="Interval end"
    android:layout_toEndOf="@+id/bisection_a"
    android:layout_toRightOf="@+id/bisection_a"
    />

    <Button
    android:id="@+id/bisection_aceptar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/bisection_b"
    android:layout_marginEnd="38dp"
    android:layout_marginRight="38dp"
    android:text="Go" />



</RelativeLayout>

